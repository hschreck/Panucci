<div class="main-specs">
      <h1>System Information:</h1>
      <div class="inner-specs">
          <div class="left-specs">
              <p class="brand">Manufacturer: <%= sysInfo[:mfr] %></p>
              <p class="model">Model: <%= sysInfo[:model] %></p>
              <p class="serial">Serial: <%= sysInfo[:serial]%></p>
          </div>
          <div class="right-specs">
          </div>
      </div>
  </div>
  <div class="subcards">
      <div class="harddrive card">
          <i class="fa fa-hdd-o fa-5x fa-left"></i>
          <div class="specs">
              <h1>Hard Drive</h1>
              <h2 class="size">Size: 500GB</h2>
          </div>
          <% if hddStatus.include? "FAIL" %>
            <i class="fa fa-times fa-3x red fa-right"></i>
          <% elsif hddStatus.include? "PASS" %>
            <i class="fa fa-check fa-3x green fa-right"></i>
            <% else %>
              <i class="fa fa-spinner fa-3x fa-right"></i>
          <% end %>
      </div>
      <div class="memory card">
          <i class="fa fa-microchip fa-5x fa-left"></i>
          <div class="specs">
              <h1>Memory</h1>
              <h2 class="size">Total RAM:  <%= totalRam %>GB</h2>
          </div>
          <% if memoryStatus.include? "FAIL" %>
            <i class="fa fa-times fa-3x red fa-right"></i>
          <% elsif memoryStatus.include? "PASS" %>
            <i class="fa fa-check fa-3x green fa-right"></i>
          <% else %>
              <i class="fa fa-spinner fa-3x fa-right"></i>
          <% end %>

      </div>
  </div>
